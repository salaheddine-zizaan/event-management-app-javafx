<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<?import javafx.geometry.Insets?>

    <HBox fx:id="eventRow" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.eventmanagement.Controller.Event.Components.NextEventRowController"
          alignment="CENTER_LEFT" prefHeight="54.0" prefWidth="729.0"
          style="-fx-background-color: E5E5E5; -fx-background-radius: 15;">
        <children>
            <VBox alignment="CENTER_LEFT" prefHeight="54.0" prefWidth="265.0">
                <children>
                    <Label fx:id="eventNameLabel" prefHeight="26.0" prefWidth="175.0" styleClass="deco"
                           stylesheets="@../../css/stylesheet.css" textFill="#14213d">
                        <font>
                            <Font name="Poppins Regular" size="14.0"/>
                        </font>
                        <VBox.margin>
                            <Insets left="12.0"/>
                        </VBox.margin>
                    </Label>
                </children>
            </VBox>
            <VBox alignment="CENTER_LEFT" prefHeight="54.0" prefWidth="83.0">
                <children>
                    <Label fx:id="cityLabel" textFill="#14213d"/>
                </children>
            </VBox>
            <VBox alignment="CENTER_LEFT" prefHeight="54.0" prefWidth="87.0">
                <children>
                    <Label fx:id="dateLabel" textFill="#14213d"/>
                </children>
            </VBox>
            <VBox alignment="CENTER_LEFT" prefHeight="54.0" prefWidth="92.0">
                <children>
                    <Label fx:id="statusLabel" style="-fx-background-color: white; -fx-background-radius: 10; -fx-cursor: hand;"
                           textFill="#79cc6b">
                        <padding>
                            <Insets bottom="4.0" left="10.0" right="10.0" top="4.0"/>
                        </padding>
                    </Label>
                </children>
            </VBox>
            <HBox alignment="CENTER" prefHeight="54.0" prefWidth="176.0" spacing="7.0">
                <children>
                    <Button fx:id="detailsButton" prefHeight="25.0" prefWidth="64.0" style="-fx-background-color: white; -fx-cursor: hand;"
                            text="Details" textFill="#fca311"/>
                    <Button fx:id="editButton" prefHeight="25.0" prefWidth="50.0" style="-fx-background-color: white; -fx-cursor: hand;"
                            text="Edit" textFill="#fca311"/>
                    <Button fx:id="deleteButton" prefHeight="25.0" prefWidth="60.0" style="-fx-background-color: white; -fx-cursor: hand;"
                            text="Delete" textFill="#fca311"/>
                </children>
            </HBox>
        </children>
    </HBox>


