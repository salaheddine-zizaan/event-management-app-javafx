<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="613.0" prefWidth="825.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.eventmanagement.Controller.organizer.ProfileController">

    <children>

        <!-- Profile Box -->
        <AnchorPane layoutX="144.0" layoutY="52.0" prefHeight="485.0" prefWidth="538.0" styleClass="login-box">
            <children>

                <!-- Title -->
                <StackPane layoutY="10.0" prefHeight="40.0" prefWidth="538.0">
                    <Label styleClass="login-title" text="My Profile">
                        <font>
                            <Font name="Poppins Medium" size="28.0" />
                        </font>
                    </Label>
                </StackPane>

                <!-- Editable Fields -->
                <Label layoutX="49.0" layoutY="101.0" styleClass="form-label" text="First Name" />
                <TextField fx:id="firstNameField" layoutX="49.0" layoutY="121.0" prefWidth="170.0" styleClass="form-input" />

                <Label layoutX="318.0" layoutY="101.0" styleClass="form-label" text="Last Name" />
                <TextField fx:id="lastNameField" layoutX="318.0" layoutY="121.0" prefWidth="170.0" styleClass="form-input" />

                <Label layoutX="49.0" layoutY="161.0" styleClass="form-label" text="Email" />
                <TextField fx:id="emailField" layoutX="49.0" layoutY="181.0" prefWidth="170.0" styleClass="form-input" />

                <Label layoutX="318.0" layoutY="161.0" styleClass="form-label" text="Phone" />
                <TextField fx:id="phoneField" layoutX="318.0" layoutY="181.0" prefWidth="170.0" styleClass="form-input" />

                <Label layoutX="49.0" layoutY="221.0" styleClass="form-label" text="Username" />
                <TextField fx:id="usernameField" layoutX="49.0" layoutY="241.0" prefWidth="170.0" styleClass="form-input" />

                <Label layoutX="318.0" layoutY="221.0" styleClass="form-label" text="Password" />
                <PasswordField fx:id="passwordField" layoutX="318.0" layoutY="241.0" prefWidth="170.0" styleClass="form-input" />

                <Label layoutX="49.0" layoutY="281.0" styleClass="form-label" text="Company Name" />
                <TextField fx:id="companyNameField" layoutX="49.0" layoutY="301.0" prefWidth="170.0" styleClass="form-input" />

                <Label layoutX="318.0" layoutY="281.0" styleClass="form-label" text="role" />
                <TextField fx:id="roleField" disable="true" layoutX="318.0" layoutY="301.0" prefWidth="170.0" styleClass="form-input" text="organizer" />

                <!-- Save Button -->
                <Button layoutX="79.0" layoutY="435.0" prefHeight="30.0" prefWidth="380.0" style="-fx-text-fill: white;" styleClass="submit-button" text="Save" textFill="WHITE" />
            <Label fx:id="statusLabel" layoutX="255.0" layoutY="384.0" />

            </children>
        </AnchorPane>
    </children>
    <stylesheets>

        <URL value="@../Auth/login.css" />
    </stylesheets>
</AnchorPane>
